{{#if this.foodPairing}}
<div class="card mt-4">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{this.image}}" class="card-img" alt="{{this.name}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text"><small class="text-muted">{{this.tagline}}</small></p>
        <p class="card-text">{{this.description}}</p>
        <p><strong>Food Pairing</strong></p>
        <ul>
          {{#each this.foodPairing}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
        <p><strong>Brewers Tips</strong></p>
        <p class="card-text">{{this.brewerTips}}</p>
      </div>
    </div>
  </div>
</div>
{{else}}
<div class="col-md-4 card-group">
  <div class="card my-4">
    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
    <div class="card-body">
      <a href="/beers/{{this.id}}">
        <h5 class="card-title">{{this.name}}</h5>
      </a>
      <p class="card-text"><small class="text-muted">{{this.tagline}}</small></p>
      <p class="card-text">{{this.description}}</p>
    </div>
  </div>
</div>
{{/if}}